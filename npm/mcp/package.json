{
  "name": "@agentic-robotics/mcp",
  "version": "0.1.3",
  "description": "Model Context Protocol server for agentic robotics with AgentDB integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agentic-robotics-mcp": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruvnet/vibecast.git"
  },
  "license": "MIT OR Apache-2.0",
  "keywords": [
    "robotics",
    "mcp",
    "model-context-protocol",
    "agentdb",
    "agentic-flow"
  ],
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "benchmark": "tsx src/benchmark.ts",
    "benchmark:hybrid": "tsx src/hybrid-benchmark.ts"
  },
  "dependencies": {
    "@agentic-robotics/core": "^0.1.3",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "agentdb": "^1.6.1",
    "agentic-flow": "^1.10.2",
    "better-sqlite3": "^12.4.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "homepage": "https://ruv.io"
}
