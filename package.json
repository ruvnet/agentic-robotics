{
  "name": "@ros3/workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:rust && npm run build:packages",
    "build:rust": "cargo build --release",
    "build:packages": "npm run build --workspaces",
    "test": "npm run test:rust && npm run test:packages && npm run test:simulation",
    "test:rust": "cargo test",
    "test:packages": "npm run test --workspaces",
    "test:simulation": "vitest run tests/simulation",
    "test:simulation:watch": "vitest watch tests/simulation",
    "test:simulation:ui": "vitest --ui tests/simulation",
    "test:physics": "vitest run tests/simulation/physics-engine.test.ts",
    "test:robot": "vitest run tests/simulation/robot-simulation.test.ts",
    "test:sensor": "vitest run tests/simulation/sensor-simulation.test.ts",
    "test:training": "vitest run tests/simulation/training-system.test.ts",
    "test:multi-robot": "vitest run tests/simulation/multi-robot.test.ts",
    "test:performance": "vitest run tests/simulation/performance.test.ts",
    "test:integration": "vitest run tests/simulation/integration.test.ts",
    "test:coverage": "vitest run --coverage tests/simulation",
    "test:coverage:view": "npm run test:coverage && open coverage/index.html",
    "test:watch": "vitest watch",
    "test:perf": "vitest run tests/simulation/performance.test.ts --reporter=verbose",
    "test:ci": "vitest run --coverage --reporter=json --reporter=html",
    "bench": "cargo bench",
    "dev": "npm run dev --workspace=@ros3/mcp-server"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "agentdb": "^1.6.1",
    "agentic-flow": "^1.9.0",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
